{{>header}}

<div class="jumbotron jumbotron-fluid text-light" style="background-color: #343a40;">
    <img src="https://s.studiobinder.com/wp-content/uploads/2019/06/Best-M-Night-Shyamalan-Movies-and-Directing-Style-StudioBinder.jpg"
         class="img-fluid" alt="Responsive image">
    <h1 class="display-4">Movies</h1>
    <p class="lead">Unlimited movies, TV shows, and more. Watch anywhere. Cancel anytime.</p>
</div>

{{#if userEmail}}
    <h1 class="text-center">Movies</h1>
    <section>
        <a href="#/add" class="btn btn-warning ">Add Movie</a>
        <form class="search float-right">
            <label>Search: </label>
            <input type="text">
            <input type="submit" class="btn btn-info" value="Search">
        </form>
    </section>
    {{#if movies}}
        <div class=" mt-3 ">
            <div class="row d-flex d-wrap">
                <div class="card-deck d-flex justify-content-center">
                        <div class="card mb-4">
                            <img class="card-img-top" src="https://cdn.gbposters.com/media/catalog/product/cache/1/image/737x938/9df78eab33525d08d6e5fb8d27136e95/l/o/lord-of-the-rings-fellowship-of-the-ring-maxi-poster-1.143.jpg" width="400">
                            <div class="card-body">
                                <h4 class="card-title">Lord of the rings I</h4>
                            </div>
                            <div class="card-footer">
                                <a href="#/details/{{objectId}}"><button type="button" class="btn btn-info">Details</button></a>
                            </div>
                        </div>
                </div>
            </div>

            <div class="card-deck d-flex justify-content-center">
                <div class="card mb-4">
                    <img class="card-img-top" src="https://cdn.gbposters.com/media/catalog/product/cache/1/image/737x938/9df78eab33525d08d6e5fb8d27136e95/l/o/lord-of-the-rings-fellowship-of-the-ring-maxi-poster-1.143.jpg" width="400">
                    <div class="card-body">
                        <h4 class="card-title">Lord of the rings I</h4>
                    </div>
                    <div class="card-footer">
                        <a href="#/details/{{objectId}}"><button type="button" class="btn btn-info">Details</button></a>
                    </div>
                </div>
            </div>

        </div>

    {{else}}
        <h1>BATEE</h1>
    {{/if}}
{{/if}}

{{>footer}}
